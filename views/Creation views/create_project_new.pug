extends ../layout

block content

  link(rel="stylesheet", href="css/Creation stylesheets/create_project_new.css")
  link(href="https://fonts.googleapis.com/css?family=IBM+Plex+Mono|Raleway|Montserrat|Slabo+27px|Roboto|Quicksand" rel="stylesheet")

  link(href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet")
  link(rel="stylesheet", href="js/datetime/jquery.datetimepicker.min.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js")
  script(src="js/datetime/jquery.datetimepicker.full.min.js")

  section.mainsection
    h1 Welcome on the project creation page!
    p To create a new project, simply fill the form below and click on the 'create' button.
    p Please note, that project names need to be unique within the system.

  section.formsection
    h2 Create project:
    form(action="create_project/createProject", method="post")
      div.textInput
        label(for="project_name") Choose the name of your project:
        br
        input(type="text", name="project_name", placeholder="Name of the project:")
      div.selectionBox
        div#select2owner
          label(for="owners") Select the participants of the project:
          br
          select(class="js-example-basic-multiple" name="owners" multiple="multiple")
            option(value="" disabled hidden) Please, assign the participants.
              for userName in userNamePool
                option(value=userName) #{userName}
      div#select2raspb
        label(for="raspberries") Select the devices you want to associate with:
        br
        select(class="js-example-basic-multiple" name="raspberries" multiple="multiple")
          option(value="" disabled hidden) Please, select the raspberries.
            for raspberryName in raspberries
              option(value=raspberryName) #{raspberryName}
      div#datecontainer
        #startdatecontainer
          label(for="Start_date") Scheduled start date:
          br
          input.dateinput(type="text" name="Start_date")
        #enddatecontainer
          label(for="End_date") Scheduled end date:
          br
          input.dateinput(type="text" name="End_date")
      div#additionalinfocontainer
        label(for="projectinfo") You can write additional information about this new project here:
        br
        textarea(name="projectinfo", cols="90", rows="10")
      div#buttonBox
        button(type="reset") Reset
        button(type="submit") Create
  
  footer
    button#return_button(type="button") Back

  script(type='text/javascript', src='js/Creation/create_project_new.js')